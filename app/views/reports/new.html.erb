<h1>New Report</h1>

<%= form_for :report do |f| %>
  <p>
    <%= f.label : date %> <%f.date_field :date %>
  </p>

  <p>
    <% f.label : stockyard %> <%f.text_field :stockyard %>
  </p>

  <p>
    <% f.label : auction%> <%f.text_field :auction %>
  </p>

  <p>
    <% f.label : receipts%> <%f.text_field :receipts%>
    <% f.label : weekOldReceipts%> <%f.text_field :weekOldReceipts%>
    <% f.label : yearOldReceipts%> <%f.text_field :yearOldReceipts%>
  </p>

  <p>
    <% f.label : summary%><br>
    <% f.text_area :summary%>
  </p>

  <p>
    <% f.label : livestock%>
    <% f.text_area :livestock%>
  </p>

  <p>
    <% f.label : source%><br>
    <% f.text_area :source%>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
