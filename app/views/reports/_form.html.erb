<%= form_for @report do |f| %>

  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@report.errors.count, "error") %>
          prohibited this article from being saved:
      </h2>
      <ul>
          <% @report.errors.full_message.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %> <%=f.text_field :title %>
  </p>

  <p>
    <%= f.label :month %> <%=f.text_field %>
    <%= f.label :day %> <%=f.text_field %>
    <%= f.label :year %> <%=f.text_field %>
  </p>


  <p>
    <%= f.label :stockyard %> <%=f.text_field :stockyard %>
  </p>

  <p>
    <%= f.label :auction%> <%=f.text_field :auction %>
  </p>

  <p>
    <%= f.label :receipts%> <%=f.text_field :receipts%>
    <%= f.label :weekOldReceipts%> <%=f.text_field :weekOldReceipts%>
    <%= f.label :yearOldReceipts%> <%=f.text_field :yearOldReceipts%>
  </p>

  <p>
    <%= f.label :summary%><br>
    <%= f.text_area :summary%>
  </p>

  <p>
    <%= f.label :livestock%>
    <%= f.text_area :livestock%>
  </p>

  <p>
    <%= f.label :source%><br>
    <%= f.text_area :source%>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
